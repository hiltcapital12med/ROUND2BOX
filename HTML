    <script>
        // Sistema de Roles
        let currentRole = 'user'; 

        function switchRole() {
            const selector = document.getElementById('roleSwitcher');
            currentRole = selector.value;
            renderRoleBasedUI();
        }

        function renderRoleBasedUI() {
            const trainerDash = document.getElementById('trainerDashboard');
            const welcomeMsg = document.getElementById('welcomeMsg');
            const userProgress = document.getElementById('userProgressSection');

            if (currentRole === 'trainer') {
                trainerDash.classList.remove('hidden');
                userProgress.classList.add('hidden'); // Entrenador no ve su propio progreso, ve el global
                welcomeMsg.innerText = "Panel de control - Entrenador";
            } else {
                trainerDash.classList.add('hidden');
                userProgress.classList.remove('hidden');
                welcomeMsg.innerText = "Tu constancia define tu éxito.";
            }
        }

        // Navegación
        function navTo(viewId) {
            // Ocultar todas las secciones
            document.querySelectorAll('.section-view').forEach(el => el.classList.add('hidden-section'));
            // Mostrar la deseada
            document.getElementById(`view-${viewId}`).classList.remove('hidden-section');
            document.getElementById(`view-${viewId}`).classList.add('fade-in');

            // Actualizar botones activos
            document.querySelectorAll('.bottom-nav-item').forEach(btn => btn.classList.remove('active', 'text-brand'));
            const activeBtn = document.getElementById(`btn-${viewId}`);
            activeBtn.classList.add('active', 'text-brand');
            activeBtn.classList.remove('text-gray-400');
        }

        // Inicialización
        renderRoleBasedUI();
    </script>
