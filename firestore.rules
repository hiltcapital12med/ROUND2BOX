rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }
    
    // Reglas por defecto - denegar acceso
    match /{document=**} {
      allow read, write: if false;
    }

    // ===== COLECCIÓN: schedule =====
    // Usuarios autenticados pueden leer y escribir en el horario
    match /schedule/{date} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ===== COLECCIÓN: users =====
    // Los admins pueden leer todos los usuarios
    // Cada usuario puede leer y escribir su propio documento
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Subcolecciones del usuario
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ===== COLECCIÓN: attendance =====
    // Los usuarios pueden leer su propio historial de asistencia
    match /attendance/{date} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ===== COLECCIÓN: progress =====
    // Los usuarios pueden leer su propio progreso
    match /progress/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Subcolecciones de progreso
      match /{document=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

  }
}
